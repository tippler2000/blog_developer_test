<p id="notice"><%= notice %></p>
<p>
    <strong>Title:</strong>
    <%= @post.title %>
</p>
<p>
    <strong>Body:</strong>
    <%= @post.body %>
</p>
<%= form_for [@post, Comment.new] do |f| %>
    <p>
        <%= f.label :body, "Enter comment" %><br/>
        <%= f.text_area :body %>
    </p>
	<p><%= f.submit "Submit" %></p>	
	<% @post.comments.each do |comment|%>
	    <p>
	        <%= time_ago_in_words(comment.created_at) %> ago<br/>
	        <%= comment.body %>
		</p>
	<% end %>
<% end %>
<%= link_to 'Back', posts_path %>
